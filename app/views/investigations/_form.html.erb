<%= simple_form_for(@investigation) do |f| %>
  <%= render 'shared/error_explanation', f: f %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :investigation_status_id %>
        <%= f.input :category_id %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :title %>
        <%= f.input :detail %>
      </div>
    </div>
  </div>

  <div class="form-actions well well-sm">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
