<% if @quadrants.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Quadrant.human_attribute_name 'name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @quadrants.each do |quadrant| %>
        <tr>
          <td><%= quadrant.name %></td>
          <td><%= link_to_show quadrant %></td>
          <td><%= link_to_edit edit_quadrant_path(quadrant) if can? :update, quadrant %></td>
          <td><%= link_to_destroy quadrant if can? :destroy, quadrant %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @quadrants %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.quadrants.new', default: :'label.new'),
    new_quadrant_path, class: 'btn btn-primary'
  ) if can? :create, Quadrant %>
</div>
