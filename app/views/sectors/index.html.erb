<% if @sectors.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Sector.human_attribute_name 'name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sectors.each do |sector| %>
        <tr>
          <td><%= sector.name %></td>
          <td><%= link_to_show sector %></td>
          <td><%= link_to_edit edit_sector_path(sector) if can? :update, sector %></td>
          <td><%= link_to_destroy sector if can? :destroy, sector %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @sectors %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.sectors.new', default: :'label.new'),
    new_sector_path, class: 'btn btn-primary'
  ) if can? :create, Sector %>
</div>
