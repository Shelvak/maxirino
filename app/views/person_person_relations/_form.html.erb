<%= simple_form_for(@person_person_relation) do |f| %>
  <%= render 'shared/error_explanation', f: f %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :person_1_id %>
        <%= f.input :person_2_id %>
        <%= f.input :link_type_id %>
        <%= f.input :since_date %>
        <%= f.input :until_date %>
      </div>
    </div>
  </div>

  <div class="form-actions well well-sm">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
