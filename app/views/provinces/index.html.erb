<% if @provinces.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Province.human_attribute_name 'name' %></th>
        <th><%= Province.human_attribute_name 'country_id' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @provinces.each do |province| %>
        <tr>
          <td><%= province.name %></td>
          <td><%= province.country_id %></td>
          <td><%= link_to_show province %></td>
          <td><%= link_to_edit edit_province_path(province) if can? :update, province %></td>
          <td><%= link_to_destroy province if can? :destroy, province %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @provinces %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.provinces.new', default: :'label.new'),
    new_province_path, class: 'btn btn-primary'
  ) if can? :create, Province %>
</div>
