<% if @zones.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Zone.human_attribute_name 'name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @zones.each do |zone| %>
        <tr>
          <td><%= zone.name %></td>
          <td><%= link_to_show zone %></td>
          <td><%= link_to_edit edit_zone_path(zone) if can? :update, zone %></td>
          <td><%= link_to_destroy zone if can? :destroy, zone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @zones %>
<% end %>

<div class="form-actions well well-sm">
  <%= link_to(
    t('view.zones.new', default: :'label.new'),
    new_zone_path, class: 'btn btn-primary'
  ) if can? :create, Zone %>
</div>
