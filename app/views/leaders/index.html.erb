<% if @leaders.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= Leader.human_attribute_name 'name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leaders.each do |leader| %>
        <tr>
          <td><%= leader.name %></td>
          <td><%= link_to_show leader %></td>
          <td><%= link_to_edit edit_leader_path(leader) if can? :update, leader %></td>
          <td><%= link_to_destroy leader if can? :destroy, leader %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @leaders %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.leaders.new', default: :'label.new'),
    new_leader_path, class: 'btn btn-primary'
  ) if can? :create, Leader %>
</div>
