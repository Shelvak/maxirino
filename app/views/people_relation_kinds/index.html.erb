<% if @people_relation_kinds.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= PeopleRelationKind.human_attribute_name 'name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people_relation_kinds.each do |people_relation_kind| %>
        <tr>
          <td><%= people_relation_kind.name %></td>
          <td><%= link_to_show people_relation_kind %></td>
          <td><%= link_to_edit edit_people_relation_kind_path(people_relation_kind) if can? :update, people_relation_kind %></td>
          <td><%= link_to_destroy people_relation_kind if can? :destroy, people_relation_kind %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @people_relation_kinds %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.people_relation_kinds.new', default: :'label.new'),
    new_people_relation_kind_path, class: 'btn btn-primary'
  ) if can? :create, PeopleRelationKind %>
</div>
