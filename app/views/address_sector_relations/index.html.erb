<% if @address_sector_relations.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= AddressSectorRelation.human_attribute_name 'address_id' %></th>
        <th><%= AddressSectorRelation.human_attribute_name 'sector_id' %></th>
        <th><%= AddressSectorRelation.human_attribute_name 'percentage' %></th>
        <th><%= AddressSectorRelation.human_attribute_name 'detail' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @address_sector_relations.each do |address_sector_relation| %>
        <tr>
          <td><%= address_sector_relation.address_id %></td>
          <td><%= address_sector_relation.sector_id %></td>
          <td><%= address_sector_relation.percentage %></td>
          <td><%= address_sector_relation.detail %></td>
          <td><%= link_to_show address_sector_relation %></td>
          <td><%= link_to_edit edit_address_sector_relation_path(address_sector_relation) if can? :update, address_sector_relation %></td>
          <td><%= link_to_destroy address_sector_relation if can? :destroy, address_sector_relation %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @address_sector_relations %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.address_sector_relations.new', default: :'label.new'),
    new_address_sector_relation_path, class: 'btn btn-primary'
  ) if can? :create, AddressSectorRelation %>
</div>
