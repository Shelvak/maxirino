<h2><%= @person %></h2>

<p>
  <strong><%= Person.human_attribute_name 'first_name' %></strong>:
  <%= @person.first_name %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'last_name' %></strong>:
  <%= @person.last_name %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'birthday' %></strong>:
  <%= @person.birthday %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'father' %></strong>:
  <%= @person.father %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'mother' %></strong>:
  <%= @person.mother %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'notes' %></strong>:
  <%= @person.notes %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'sex' %></strong>:
  <%= @person.sex %>
</p>
<p>
  <strong><%= Person.human_attribute_name 'alias' %></strong>:
  <%= @person.alias %>
</p>

<div class="form-actions">
  <%= link_to t('label.edit'), edit_person_path(@person) if can? :update, @person %> |
  <%= link_to t('label.list'), people_path %>
</div>
