<% if @investigation_statuses.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= InvestigationStatus.human_attribute_name 'name' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @investigation_statuses.each do |investigation_status| %>
        <tr>
          <td><%= investigation_status.name %></td>
          <td><%= link_to_show investigation_status %></td>
          <td><%= link_to_edit edit_investigation_status_path(investigation_status) if can? :update, investigation_status %></td>
          <td><%= link_to_destroy investigation_status if can? :destroy, investigation_status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @investigation_statuses %>
<% end %>

<div class="form-actions well well-sm">
  <%= link_to(
    t('view.investigation_statuses.new', default: :'label.new'),
    new_investigation_status_path, class: 'btn btn-primary'
  ) if can? :create, InvestigationStatus %>
</div>
